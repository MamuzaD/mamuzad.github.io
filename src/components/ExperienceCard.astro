---
import { type experience } from "@/content/experiences"
import { Image } from "astro:assets"

interface Props {
  experience: experience
}

const { experience } = Astro.props
---

<a href={experience.href} target="_blank" rel="noopener noreferrer">
  <div
    class="bg-muted flex h-80 w-full flex-col place-items-center rounded-[2.5rem] pt-7 transition-all hover:scale-[1.01] ease-in-out"
    style="box-shadow: rgba(0, 0, 0, 0.2) 0px 20px 50px 30px, rgba(0, 0, 0, 0.06) 0px 12px 24px 4px"
  >
    <div class="w-full px-8 pb-2">
      <div
        class="flex h-36 w-full items-center justify-center rounded-3xl bg-red-950"
        style={{
          background: `linear-gradient(45deg, ${experience.colors[0]}, ${experience.colors[1]})`,
          boxShadow: `0 0 12px 12px rgba(${experience.transparents[0]}), 0 0 12px 12px rgba(${experience.transparents[1]})`,
        }}
      >
        <Image
          height={80}
          width={80}
          src={experience.src}
          alt={`${experience.name} logo`}
        />
      </div>
      <div>
        <h3 class="mt-4 text-lg font-bold">{experience.name}</h3>
        <div class="flex w-full flex-col">
          <p class="text-md flex-1 font-semibold">{experience.role}</p>
          <p class="text-md self-end">{experience.range}</p>
        </div>
      </div>
    </div>
  </div>
</a>
