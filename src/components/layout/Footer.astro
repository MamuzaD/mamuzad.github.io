---
import { Icon } from "astro-icon/components"

const currentYear = new Date().getFullYear()
const lastUpdated = new Date().toISOString().split("T")[0]
---

<footer
  class="flex w-full flex-col place-items-center justify-between gap-4 bg-gradient-to-t from-neutral-300/80 via-95% to-transparent px-2 pb-6 pt-14 font-semibold dark:from-black/80 md:flex-row md:place-items-start md:px-8"
>
  <div class="z-50 flex gap-10">
    <p>
      developed with <a
        href="https://astro.build/"
        class="group relative inline-block transition-[max-width]"
        >Astro
        <span
          class="absolute bottom-0 left-0 block h-0.5 w-full max-w-0 origin-center bg-primary transition-[max-width] duration-500 group-hover:max-w-full"
        ></span>
      </a>
      <Icon
        name="mdi--rocket-launch-outline"
        size="1.5em"
        class="inline-block"
      />
    </p>
    <p>&copy; {currentYear} Daniel Mamuza</p>
  </div>
  <div class="z-50 flex items-center justify-center gap-4">
    <p
      class="rounded-full border border-primary bg-primary/50 px-2.5 py-0.5 backdrop-blur"
    >
      v3.0.0
    </p>
    <p class="font-mono">LAST UPDATED {lastUpdated}</p>
  </div>
</footer>
